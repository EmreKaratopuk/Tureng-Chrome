{
    "author": "Kerim Demirel",
    "manifest_version": 3,
    "name": "Tureng Dictionary",
    "short_name": "Tureng",
    "description": "Tureng English-Turkish Online Dictionary",
    "version": "6.1.0",   

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/AppIcon.png"
    },

    "icons": {
        "128": "images/AppIcon.png",
        "48": "images/AppIcon.png"
     },

    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus"
    ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "options_page": "options.html",

    "commands": {
        "_execute_action": {
           "suggested_key": {
              "chromeos": "Alt+V",
              "default": "Alt+V",
              "linux": "Alt+V",
              "mac": "Alt+V",
              "windows": "Alt+V"
           }
        }
     }

}